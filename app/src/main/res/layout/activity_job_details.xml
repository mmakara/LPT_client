<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetails">


        <LinearLayout
            android:id="@+id/jobs_container"
            android:layout_width="match_parent"
            android:layout_height="453dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobDetails_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job details" />


            <TextView
                android:id="@+id/jobDetails_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs Description" />


            <TextView
                android:id="@+id/jobDetails_applicants_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zaaplikowali:" />

            <TableLayout
                android:id="@+id/jobDetails_applicants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </LinearLayout>


</android.support.constraint.ConstraintLayout>